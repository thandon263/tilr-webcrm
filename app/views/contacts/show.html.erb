
<div class="alert alert-success" role="alert">
  <strong>Well done!</strong><p id="notice"><%= notice %></p>
</div>

<div class="show_container">
  <div class="card">
    <div class="card-image waves-effect waves-block waves-light">
      <%= image_tag(@contact.picture) %>
    </div>
    <div class="card-content">
      <span class="card-title activator grey-text text-darken-4"><%= "#{@contact.first_name}#{@contact.last_name}" %><i class="glyphicon glyphicon-option-vertica"></i></span>
      <p><a href="#"><%= @contact.state %></a></p>
    </div>
    <div class="card-reveal">
      <span class="card-title grey-text text-darken-4"><%= @contact.first_name %><i class="material-icons right">close</i></span>
      <p><%= @contact.description %></p>
    </div>
  </div>

</div>
