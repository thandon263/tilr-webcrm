<p id="notice"><%= notice %></p>

<h1>Contacts</h1><span class="new_contact"><%= link_to '', new_contact_path, class: "glyphicon glyphicon-plus" %></span>

<table class="table table-hover">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Address</th>
      <th>Gender</th>
      <th colspan="6"></th>
    </tr>
  </thead>

  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.first_name %></td>
        <td><%= contact.last_name %></td>
        <td><%= contact.address %></td>
        <td><%= contact.gender %></td>
        <td><%= link_to '', contact, class: "glyphicon glyphicon-th-large" %></td>
        <td><%= link_to '', edit_contact_path(contact), class: "glyphicon glyphicon-pencil" %></td>
        <td><%= link_to '', contact, method: :delete, data: { confirm: 'Are you sure?' }, class: "glyphicon glyphicon-trash" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
